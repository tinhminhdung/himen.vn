@model onsoft.Models.GroupProduct
@{
    ViewBag.Title = "Thêm mới nhóm sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#groupproductcreate-form").validate({
                        rules: {
                            Name: "required",
                            Title: "required",
                            Description: "required",
                            Keyword: "required",
                            Ord: {
                                required: true,
                                number: true
                            }
                        },
                        messages: {
                            Name: "Phải nhập tên nhóm",
                            Title: "Phải nhập tiêu đề",
                            Description: "Phải nhập miêu tả",
                            Keyword: "Phải nhập từ khóa",
                            Ord: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số"
                            }
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../GroupProduct/GroupProductIndexot'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='../../GroupProduct/GroupProductIndexot'>Danh mục nhóm sản phẩm</a></li>
                <li class='Last'><span>Thêm mới nhóm sản phẩm</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("GroupProductAddSubot", "GroupProduct", FormMethod.Post, new { enctype = "multipart/form-data", @id = "groupproductcreate-form", @class = "validate-form" }))
        {
            @*<input type="text" name="level" value="@ViewBag.Level" hidden="hidden" style="position:absolute; left:9999999999999px"/>*@
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm mới nhóm sản phẩm</h4>

                        <!-- Button -->
                        <div class="ui-corner-top ui-corner-bottom">
                            <div id="toolbox">
                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td align="center">

                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>

                                            </td>
                                            <td align="center">

                                                <a title="Quay lại" class="toolbar btn btn-info" href="../../GroupProduct/GroupProductIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Thêm mới nhóm sản phẩm</h4>
                            <div class="FloatMenuBar">

                                <div class="ui-corner-top ui-corner-bottom">
                                    <div id="Div1">

                                        <div style="float: right;" class="toolbox-content">

                                            <table class="toolbar">
                                                <tr>
                                                    <td align="center">
                                                        <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                                    </td>
                                                    <td align="center">
                                                        <a title="Quay lại" class="toolbar btn btn-info" href="../../GroupProduct/GroupProductIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->

                    <!-- widget-body -->
                    <div class="widget-body">

                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">

                                    <tr>
                                        <td class="key">Thuộc nhóm cha <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.DropDownList("GroupProduct","Danh mục sản phẩm cấp 1")
