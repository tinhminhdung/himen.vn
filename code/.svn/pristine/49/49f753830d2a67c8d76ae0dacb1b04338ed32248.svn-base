  <script type="text/javascript">
      jQuery(document).ready(function () {
          jQuery('ul.Color li').click(function () {
              jQuery('ul.Color li').css({ border: "3px solid #D7D7D7" });
              jQuery(this).css({ border: "3px solid #bc204f" });
          });

          jQuery('.sQuant a.btnAdd').click(function () {
              jQuery(this).parent().find('.txtQuantity').val(parseInt(jQuery(".sQuant .txtQuantity").val()) + 1);
          });

          jQuery('.sQuant .btnDivi').click(function () {
              if (jQuery(this).parent().find('.txtQuantity').val() < 2) {
                  jQuery(this).parent().find('.txtQuantity').val(1);
              }
              else {
                  jQuery(this).parent().find('.txtQuantity').val(parseInt(jQuery(this).parent().find('.txtQuantity').val()) - 1);
              }
          });

          jQuery('.sQuant .txtQuantity').focusout(function () {
              if (jQuery(this).parent().find('.txtQuantity').val() < 0) {
                  jQuery(this).parent().find('.txtQuantity').val(1);
              }
          });

          jQuery('#lstImg li img').click(function () {

              var srcText = jQuery(this).attr("src");
              var srcLarge = jQuery(this).attr("data-large");
              jQuery('#imgPro img').animate({ opacity: "0.2" }, 700, function () {
                  jQuery('#imgPro img').attr("src", srcText),
                  jQuery(this).animate({ opacity: "1" }, 700);
              });

              jQuery('.magnifyarea img').attr("src", srcLarge);

              jQuery('#lstImg li img').css({ border: "2px solid #777" });
              jQuery(this).css({ border: "2px solid #be2051" });
          });
      });

</script>
