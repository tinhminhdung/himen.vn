@model onsoft.Models.Shop
@{
    ViewBag.Title = "Thay đổi thông tin cửa hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Validate Data -->


<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript">$j = jQuery.noConflict();</script>

<script type="text/javascript">

    (function ($j, W, D) {

        var JQUERY4U = {};

        JQUERY4U.UTIL =
        {
            setupFormValidation: function () {
                //validation rules
                $j("#categorycreate-form").validate({
                    rules: {
                        Name: "required",
                        Address: "required",
                        Tel: "required",
                        SDate: "required",
                    },
                    messages: {
                        Name: "Nhập tên cửa hàng",
                        Address: "Nhập địa chỉ cửa hàng",
                        Tel: "Số điện thoại",
                        SDate: "Nhập ngày bắt đầu hoạt động",
                    },
                    submitHandler: function (form) {
                        form.submit();
                    }
                });
            }
        }

        //when the dom has loaded setup form validation rules
        $j(D).ready(function ($) {
            JQUERY4U.UTIL.setupFormValidation();
        });

    })(jQuery, window, document);
</script>
<!-- End Validate Data -->

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ShopEdit", "Shop", FormMethod.Post, new { @id = "categorycreate-form", @class = "validate-form" }))
{
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                   <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở lại", "ShopIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
        <tr>
            <th>Tên cửa hàng<span style="color:red">(*)</span></th>
            <td>@Html.TextBoxFor(m=>m.Name, "", new { @class="text"})</td>
        </tr>
        <tr>
            <th>Địa chỉ<span style="color:red">(*)</span></th>
            <td>@Html.TextBoxFor(m=>m.Address, "", new { @class="text"})</td>
        </tr>
        <tr>
            <th>Di động<span style="color:red">(*)</span></th>
            <td>@Html.TextBoxFor(m=>m.Tel, "", new { @class="text", @onkeypress="OnlyInputNumber(0)"})</td>
        </tr>
        <tr>
            <th>Mô tả</th>
            <td>@Html.TextArea("Description")</td>
        </tr>
        <tr>
            <th>Ngày hoạt động<span style="color:red">(*)</span></th>
            <td>@Html.TextBoxFor(m=>m.SDate)</td>
        </tr>
        <tr>
            <th>Ngày kết thúc hoạt động</th>
            <td>@Html.TextBoxFor(m=>m.EDate)</td>
        </tr>
        <tr>
            <td class="Control" colspan="2">
                <ul>
                        <li><input type="submit" value="Ghi lại "class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở lại", "ShopIndex","", new { @class="uback"})</li>
                </ul>
            </td>
        </tr>
    </table>
}
<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }
    $(function () {
        createEditor('vi', 'Description');
    });
</script>
<script type="text/javascript">
    $('#SDate').datepicker();
    $('#EDate').datepicker();
</script>