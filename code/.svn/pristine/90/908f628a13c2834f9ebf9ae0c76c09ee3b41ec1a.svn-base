@{
    ViewBag.Title = "Demonhe";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @Html.DropDownList("LinkModule", " === Chọn liên kết === ")
        <table border="1">
            <tr>
                <td>Tên khách hàng</td>
                <td>Email</td>
                <td>Số điện thoại</td>
                <td>Sửa</td>
                <td>Xóa</td>
            </tr>
            @*Chạy vòng lặp lấy ra các đối tượng từ list model*@
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td><a href="/BaoGia/EditBaogia?id=@item.ID">Sửa</a></td>
                    <td><a href="/BaoGia/DeleteBaogia?id=@item.ID">Xóa</a></td>

                </tr>
            }
        </table>

        <a href="/BaoGia/ThemMoi">Thêm mới</a>
    </div>
</body>
</html>
