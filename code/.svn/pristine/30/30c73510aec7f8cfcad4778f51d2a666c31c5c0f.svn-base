@{
    ViewBag.Title = "Fordaytoday_Product";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
 <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#txtDate").datepicker();
            $("#txtDateto").datepicker();
        })
    </script>
}
<script type="text/javascript">jQuery.noConflict();</script>
<script type="text/javascript" src="https://www.google.com/jsapi"></script>
@model IList<onsoft.Models.sp_Product_Baocao_Result>
<script type="text/javascript">
    $(function () {
        $('#txtDate,#txtDateto').focus(function () {
            $(this).val('');
        });
    });
</script>
@Html.Raw(ViewBag.script)
<script type="text/javascript">
    $(document).ready(function () {
        $("tr").click(function () {
            var id = $(this).attr('id');
            $.ajax({
                url: '/Baocao/PartialView',
                type: 'Get',
                data: { "id": id },
                success: function (data) {
                    $("#chart").html(data);
                }

            });

        })
        

    });

</script>
<div style="margin:0 auto; width:700px">
    @using (Html.BeginForm())
    {
        if (Model != null)
        {
            <input type="text" name="txtDate" id="txtDate" value="@ViewBag.Date" />
            <input type="text" name="txtDateto" id="txtDateto" value="@ViewBag.Dateto" />
        }
        else
        {
            @Html.TextBox("txtDate");
        @Html.TextBox("txtDateto");
        }
        <input type="submit" value="nhap" />
        <div>
            <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="cph_Main_ctl00_ctl00_grvProducts" style="border-collapse: collapse; text-align: center">
                <tr style="text-align:center;">
                    <th style="text-align:center;">Product Name</th>
                    <th style="text-align:center;">Number</th>
                    <th style="text-align:center;">Group Product</th>
                </tr>
                @if (Model != null)
                {
                    for (int i = 0; i < Model.Count; i++)
                    {
                        <tr  id ="@Model[i].Id" style="text-align:center;">
                            <td style="text-align:center;">@Model[i].Name</td>
                            <td style="text-align:center;">@Model[i].Soluongmua</td>
                            <td style="text-align:center;">@Model[i].GroupName</td>
                        </tr>
                    }
                }
            </table>

        </div>

    }
    @{Html.RenderAction("PartialView", "Baocao");}
</div>


