@model IList<onsoft.Models.Supplier>
@{
    ViewBag.Title = "SupplierIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý thông tin nhà cung cấp</h2>
@using (Html.BeginForm("MultiDelete", "Supplier", FormMethod.Post))
{
    <div class="Control">
        <ul>
            <li>@Html.ActionLink("Thêm mới", "SupplierCreate", "", new { @class = "vadd" })</li>
            <li><input type="submit" value=" Xóa " class="mulDel" /></li>
            <li>@Html.ActionLink("Làm mới", "SupplierIndex", "", new { @class = "vrefresh" })</li>
            <li><a class="vback" href="javascript:void(0);" onclick="window.history.go(-1);">Trở lại</a></li>
        </ul>
    </div>
    <table class="TableView" border="1" id="myTable">
        <tr class="trHeader">
            <th class="CheckBoxsmall"><input type="checkbox" onclick="Javascript: chkSelectAll_OnClick(this)" id="chkSelectAll" /></th>
            <th class="Text">Tên nhà cung cấp</th>
            <th class="TextSmall">Website</th>
            <th class="Number">Điện thoại</th>
            <th class="Function">Chức năng</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i % 2 == 0)
            {
                <tr id="trOdd_@i" class="trOdd" onmousemove="Javascript:chkSelect_OnMouseMove(this)" onmouseout="Javascript:chkSelect_OnMouseOut(this,0)">
                    <td class="CheckBoxsmall">@Html.CheckBox("chk" + Model[i].Id, new { id = "chkSelect", onclick = "Javascript:chkSelect_OnClick(this,0)", @class = "chk" })</td> 
                    <td class="Text">@Model[i].Name</td>
                    <td class="TextSmall">@Model[i].Website</td>
                    <td class="Number">@Model[i].Tel</td>
                    <td class="Function">
                        @Html.ActionLink("Sửa", "SupplierEdit", new { id = Model[i].Id }, new { @class = "vedit" }) 
                        @Html.ActionLink("Xóa", "SupplierDelete", new { id = Model[i].Id }, new { @onclick = "return DeleteConfirm()", @class = "vdelete" })     
                    </td>
                </tr>
            }
            else
            {
                <tr id="trEven_@i" class="trEven" onmousemove="Javascript:chkSelect_OnMouseMove(this)" onmouseout="Javascript:chkSelect_OnMouseOut(this,@i)">
                    <td class="CheckBoxsmall">@Html.CheckBox("chk" + Model[i].Id, new { id = "chkSelect", onclick = "Javascript:chkSelect_OnClick(this,0)", @class = "chk" })</td> 
                    <td class="Text">@Model[i].Name</td>
                    <td class="TextSmall">@Model[i].Website</td>
                    <td class="Number">@Model[i].Tel</td>
                    <td class="Function">
                        @Html.ActionLink("Sửa", "SupplierEdit", new { id = Model[i].Id }, new { @class = "vedit" }) 
                        @Html.ActionLink("Xóa", "SupplierDelete", new { id = Model[i].Id }, new { @onclick = "return DeleteConfirm()", @class = "vdelete" })     
                       
                    </td>
                </tr>
            }
        }
    </table>
    @Html.Raw(ViewBag.Pager)
    <div class="Control">
        <ul>
            <li>@Html.ActionLink("Thêm mới", "SupplierCreate", "", new { @class = "vadd" })</li>
            <li><input type="submit" value=" Xóa " class="mulDel" /></li>
            <li>@Html.ActionLink("Làm mới", "SupplierIndex", "", new { @class = "vrefresh" })</li>
            <li><a class="vback" href="javascript:void(0);" onclick="window.history.go(-1);">Trở lại</a></li>
        </ul>
   </div>
}
