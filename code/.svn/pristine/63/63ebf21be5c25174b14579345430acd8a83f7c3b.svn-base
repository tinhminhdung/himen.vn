@using PagedList.Mvc;
@using PagedList;
@using os;
@using onsoft.Models;
@model PagedList.IPagedList<onsoft.Models.News>
@{
    ViewBag.Title = @Html.Raw(ViewBag.tit);
    ViewBag.des = @Html.Raw(ViewBag.des);
    ViewBag.key = @Html.Raw(ViewBag.key);
    Layout = "~/Views/Shared/_LayoutSub.cshtml";
}
<div class="detail">
<div class="titlelink">
    <ul>
        <li><a href='/'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
        <li class='SecondLast'><a href='/tin-tuc'>Tin tức</a></li>
        @Html.Raw(ViewBag.link)
    </ul>
</div>
<div class="box-detail">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="news-box">
        @if (Model[i].Image.Length > 0)
        {
            <a href="/new/@Model[i].Tag" title="@Model[i].Name"><img src="@Model[i].Image" alt="@Model[i].Name"/></a>
        }
        <a href="/new/@Model[i].Tag" title="@Model[i].Name"><h2>@Model[i].Name</h2></a>
        <p>@Html.Raw(Model[i].Content)</p>
        </div>
    }
</div>
    @Html.PagedListPager(Model, page => Url.Action("ListNews", "NewsView", new { page = page }), (PagedListRenderOptions)ViewBag.ship)
</div>