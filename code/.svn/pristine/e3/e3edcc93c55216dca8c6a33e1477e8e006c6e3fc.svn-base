@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<onsoft.Models.sp_GroupMember_GetByAll_Result>

@{
    ViewBag.Title = "Quản lý nhóm nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

@section Styles
{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}



<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">
        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li class='SecondLast'><a href='#'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='Last'><span>Danh sách nhóm nhân viên</span></li>
            </ul>
        </div>
        <div style="clear: both;"></div>
        <div id="cph_Main_ContentPane">
            <div class="widget">
                <div class="widget-title">
                    <h4><i class="icon-list-alt"></i>&nbsp;Danh sách nhóm nhân viên</h4>
                    @Html.Partial("_PartialMenuRight")
                    <div id="hiddenToolBarScroll" class="scrollBox hidden">
                        <h4>
                            <i class="icon-list-alt"></i>&nbsp;Danh sách nhóm nhân viên</h4>
                        <div class="FloatMenuBar">
                            @Html.Partial("_PartialMenuRight")
                        </div>
                    </div>
                </div>
                <div class="widget-body">

                    <div class="row-fluid">
                        <div class="span3">
                            <div id="sample_1_length" class="dataTables_length">
                                <select style="width: 160px;">
                                    <option value="10">10 nhóm nhân viên / trang</option>
                                    <option selected="selected" value="20">20 nhóm nhân viên / trang</option>
                                    <option value="30">30 nhóm nhân viên / trang</option>
                                    <option value="50">50 nhóm nhân viên / trang</option>
                                    <option value="100">100 nhóm nhân viên / trang</option>

                                </select>
                            </div>
                        </div>
                        <div class="span9 form-search pull-right text-right">
                            <input name="ctl00$cph_Main$ctl00$ctl00$txtSearch" type="text" maxlength="100" id="cph_Main_ctl00_ctl00_txtSearch" placeholder="Tên nhóm nhân viên" style="width: 200px;" />
                            <select name="ctl00$cph_Main$ctl00$ctl00$ddlCate" id="cph_Main_ctl00_ctl00_ddlCate" style="width: 200px;">
                                <option selected="selected" value="-1">-- Danh mục nhóm nhân viên --</option>
                                <option value="832431">S&#225;ch kinh doanh</option>
                                <option value="832432">└-------- T&#224;i ch&#237;nh v&#224; đầu tư</option>
                                <option value="832433">└-------- Marketing v&#224; b&#225;n h&#224;ng</option>
                                <option value="832434">└-------- L&#227;nh đạo v&#224; quản l&#253;</option>


                            </select>
                            <input type="submit" name="ctl00$cph_Main$ctl00$ctl00$btnSearch" value="Tìm kiếm" id="cph_Main_ctl00_ctl00_btnSearch" class="btn" />
                            <a class="btn " href="/admin.aspx?module=products&act=advance-search"><i class="icon-filter"></i>Lọc nhóm nhân viên</a>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3">
                            <div style="margin-top: 18px;">
                                Tổng số nhóm nhân viên: <span style='color: #A52A2A;'>50</span> / <span style='color: #333;'>100</span>
                            </div>
                        </div>
                        <div class="span9">
                            <!--Paging-->
                            @Html.PagedListPager(Model, page => Url.Action("GroupMember", new { page = page}), (PagedListRenderOptions)ViewBag.Pro)
                        </div>
                    </div>
                    <div>
                        <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="tblGroupMember" style="border-collapse: collapse;">
                            <tr>
                                <th scope="col" width="30px" class="text-center">
                                    <input id="cph_Main_ctl00_ctl00_grvProducts_chkAll" type="checkbox" name="ctl00$cph_Main$ctl00$ctl00$grvProducts$ctl01$chkAll" onclick="javascript: SelectAllCheckboxes(this);" />
                                </th>                                
                                <th scope="col" id="name" >
                                    Tên nhóm quản lý</th>
                                <th scope="col" class="text-left" width="80px">Trạng thái</th>
                                
                                <th scope="col" class="text-center" width="140px">Chức năng</th>
                            </tr>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr class="row1">
                                    <td class="text-center">
                                        <input id="cph_Main_ctl00_ctl00_grvProducts_chkEdit_1" type="checkbox" name="ctl00$cph_Main$ctl00$ctl00$grvProducts$ctl03$chkEdit" />
                                        <input type="hidden" name="ctl00$cph_Main$ctl00$ctl00$grvProducts$ctl03$hdEdit" id="cph_Main_ctl00_ctl00_grvProducts_hdEdit_1" value="2946698" />
                                    </td>
                                    <td class="text-left" >
                                        @Model[i].Name
                                    </td>
                                    <td class="Code text-left" >@Model[i].Active</td>
                                    
                                    <td class="text-center">
                                        <a href="/admin.aspx?module=products&act=edit&id=2946698" class="action-link-button" id="lbtUpdateProduct2946698"
                                            title="Xem chi tiết nhóm nhân viên này"><i class="icon-img"></i></a>
                                        <a href="/admin.aspx?module=products&act=edit&id=2946698" class="action-link-button" id="lbtUpdateProduct2946698"
                                            title="Chỉnh sửa nhóm nhân viên này"><i class="icon-edit"></i></a>
                                        <a href="/admin.aspx?module=products&act=add&cloneid=2946698&random=2946698&getimage=true" class="action-link-button"
                                            title="Xóa nhóm nhân viên này"><i class="icon-remove"></i></a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>

                    <!--Paging-->
                    @Html.PagedListPager(Model, page => Url.Action("GorupMember", new { page = page }), (PagedListRenderOptions)ViewBag.Pro)
                    <div style="clear: both;"></div>

                </div>
            </div>
        </div>

    </div>
</div>


