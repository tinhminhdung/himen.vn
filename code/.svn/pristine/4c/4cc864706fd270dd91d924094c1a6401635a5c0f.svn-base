<!--Sử dụng cho autocomplete-->
<script type="text/javascript">
    $(document).ready(function () {
        $('*[data-autocomplete-url]')
    .each(function () {
        $(this).autocomplete({
            source: $(this).data("autocomplete-url")
        });
    });
    });
</script>

<!--Reset ô tìm kiếm-->
<script type="text/javascript">
    $(function () {
        $('#ProName').focus(function () {
            $(this).val('');
        });
    });
</script>
