    <script type="text/javascript">
        $(function () {
            $('body').append('<div id="backtotop"></div>');
            $('body').append('<div id="big-daddy"></div>');
            $(window).scroll(function () {
                var $toa_do = $(window).scrollTop();
                if ($toa_do == 0) { $('#backtotop').fadeOut(); }
                else { $('#backtotop').fadeIn() };
                if ($toa_do == 0) { $('#big-daddy').fadeOut(); }
                else { $('#big-daddy').fadeIn() };
            });
            $('#backtotop').click(function () {
                $('html,body').animate({ scrollTop: 0 }, 500);
            });
        });
    </script>
<script type="text/javascript">
    $(function () {
        var sticky_navigation_offset_top = $('#top').offset().top;
        var sticky_navigation = function () {
            var scroll_top = $(window).scrollTop();
            if (scroll_top > sticky_navigation_offset_top) {
                $('#top').addClass('fixedtop');
            } else {
                $('#top').removeClass('fixedtop');
            }
        };
        // run our function on load
        sticky_navigation();
        // and run it again every time you scroll
        $(window).scroll(function () {
            sticky_navigation();
        });
    });
					</script>
