@model onsoft.Models.Category
@{
    ViewBag.Title = "CategoryAddSub";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty;
}

<!-- Validate Data -->
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script type="text/javascript">

    (function ($, W, D) {

        var JQUERY4U = {};

        JQUERY4U.UTIL =
        {
            setupFormValidation: function () {
                //validation rules
                $("#categoryedit-form").validate({
                    rules: {
                        Brand: "required",
                        Name: "required",
                        Title: "required",
                        Keyword: "required",
                        Description: "required",
                        Ord: {
                            required: true,
                            number: true
                        }
                    },
                    messages: {
                        Brand: "Phải chọn nhóm sản phẩm",
                        Name: "Phải nhập tên loại sản phẩm",
                        Title: "Phải nhập tiêu đề",
                        Keyword: "Phải nhập từ khóa",
                        Description: "Phải nhập miêu tả",
                        Ord: {
                            required: "Phải nhập thứ tự",
                            number: "Phải nhập kiểu số"
                        }
                    },
                    submitHandler: function (form) {
                        form.submit();
                    }
                });
            }
        }

        //when the dom has loaded setup form validation rules
        $(D).ready(function ($) {
            JQUERY4U.UTIL.setupFormValidation();
        });

    })(jQuery, window, document);
</script>
<!-- End Validate Data -->

