@{
    ViewBag.Title = "Thanh toán đơn hàng";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
    ViewBag.metas = Html.Raw(ViewBag.meta);
}
<script type="text/javascript">
    $(document).ready(function () {
        // Ajax sử dụng vc1
        $("#vc1").click(function () {
            $('#opc-review').remove();
            var vc1 = $(this).val();
            $.post("/Pages/BuyCart", { "vc1": vc1 },
                    function (data) {
                        $("#pro").html(data);
                    });
        });

        // Ajax sử dụng vc2
        $("#vc2").click(function ()
        {
            $('#opc-review').remove();
            var vc2 = $(this).val();
            $.post("/Pages/BuyCart", { "vc2": vc2 },
                    function (data) {
                        $("#pro").html(data);
                    });
        });

        // Ajax sử dụng vc3
        $("#vc3").click(function () {
            $('#opc-review').remove();
            var vc3 = $(this).val();
            $.post("/Pages/BuyCart", { "vc3": vc3 },
                    function (data) {
                        $("#pro").html(data);
                    });
        });

        // Ajax sử dụng TinhTP
        $("#TinhTP").click(function () {
            $('#opc-review').hide();
            var TinhTP = $(this).val();
            var nongthon;
            if ($('#Ngoaithanh').is(':checked')) {
                nongthon = "1";
            }
            else {
                nongthon = "0";
            }
            $.post("/Pages/BuyCart_Tinh", { "Tinh": TinhTP, "nongthon": nongthon },
                    function (data) {
                        $("#pro").html(data);
                    });
        });
        $("#btn_save_order").click(function () {
            var vc1 = $('#vc1').val();
            var vc2 = $('#vc2').val();
            var vc3 = $('#vc3').val();
            var Name = $('#Name').val();
            var Add = $('#Add').val();
            var TinhTP = $('#TinhTP').val();
            var Tel = $('#Tel').val();
            var ck;
            var nongthon;
            if ($('#Nhanhang').is(':checked')) {
                ck = "on";
            }
            else {
                ck = "off";
            }
            if ($('#Ngoaithanh').is(':checked')) {
                nongthon = "1";
            }
            else {
                nongthon = "0";
            }
            $.post("/Pages/BuyAdd", { "vc1": vc1, "vc2": vc2, "vc3": vc3, "checks": ck, "Name": Name, "Add": Add, "TinhTP": TinhTP, "Tel": Tel, "nongthon": nongthon },
                   function (data) {
                       //$("#Add_nhan_hang").html(data);
                       window.location.href = "/Pages/order_success";
                   });
        });

        $("#Nhanhang").click(function () {
            var Name = $('#Name').val();
            var Add = $('#Add').val();
            var TinhTP = $('#TinhTP').val();
            var Tel = $('#Tel').val();
            var checks = $(this).val();
            var ck;
            if ($(this).is(':checked'))
            {
                ck = "on";
            }
            else
            {
                ck = "off";
            }
            $.post("/Pages/CheckCustomer", { "checks": ck, "Name": Name, "Add": Add, "TinhTP": TinhTP, "Tel": Tel },
                    function (data) {
                        $("#Add_nhan_hang").html(data);
                    });
        });

    });
    </script>
