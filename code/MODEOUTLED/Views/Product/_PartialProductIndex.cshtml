            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "name": name },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });


        // Ajax sử dụng cho change Num
        $(".Num").change(function () {
            var id = $(this).attr("id");
            var num = $(this).val();
            if (num == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập số lượng.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "num": num },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change PricePromotion
        $(".PricePromotion").change(function () {
            var id = $(this).attr("id");
            var pricePromotion = $(this).val();
            if (pricePromotion == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập giá bán buôn.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "pricePromotion": pricePromotion },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change PriceRetail
        $(".PriceRetail").change(function () {
            var id = $(this).attr("id");
            var priceRetail = $(this).val();
            if (priceRetail == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập giá bán lẻ.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "priceRetail": priceRetail },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change Code
        $(".Code").change(function () {
            var id = $(this).attr("id");
            var code = $(this).val();
            if (code == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập mã sản phẩm.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "code": code },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

        // Ajax sử dụng cho change Weight
        $(".Weight").change(function () {
            var id = $(this).attr("id");
            var Weight = $(this).val();
            if (Weight == "") {
                // Báo lỗi nhập dữ liệu
                $('#msg').show();
                $('#update-message').removeClass().addClass("alert alert-error").text("Phải nhập trọng lượng sản phẩm.");
                $('#msg').fadeOut(5000);
            } else {
                clearUpdateMessage();
                $.post("/Product/ChangeProduct", { "id": id, "Weight": Weight },
                    function (data) {
                        // Thay đổi thành công
                        $('#msg').show();
                        $('#update-message').removeClass().addClass("alert alert-info").text(htmlDecode(data));
                        $('#msg').fadeOut(5000);
                    });
            }
        });

    });

    function clearUpdateMessage() {
        $('#update-message').text("");
    }

    function htmlDecode(value) {
        if (value) {
            return $('<div />').html(value).text();
        }
        else {
            return '';
        }
    }
</script>

<!--Thay đổi chiều mũi tên khi sắp xếp-->
<script type="text/javascript">
    $(document).ready(function () {

        var currentSortOrder = '@ViewBag.CurrentSortOrder';
            if (currentSortOrder == "ord asc") {
                $('#ord').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#ord').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortName = '@ViewBag.CurrentSortName';
            if (currentSortName == "name asc") {
                $('#name').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#name').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortGroup = '@ViewBag.CurrentSortGroup';
            if (currentSortGroup == "group asc") {
                $('#group').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
                $('#group').removeClass('NumberOrdUp').addClass("NumberOrdDown");
            }

            var currentSortPriceRetail = '@ViewBag.CurrentSortPriceRetail';
            if (currentSortPriceRetail == "priceretail asc") {
                $('#priceretail').removeClass('NumberOrdDown').addClass("NumberOrdUp");
            }
            else {
