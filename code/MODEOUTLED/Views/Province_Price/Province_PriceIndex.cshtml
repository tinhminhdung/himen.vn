@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<onsoft.Models.sp_Province_Price_GetByAll_Result>

@{
    ViewBag.Title = "Quản lý khung gía";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

@section Styles
{
    <!--Sử dụng cho autocomplete-->
