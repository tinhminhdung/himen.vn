    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#menu-form").validate({
                        rules: {                            
                            Link: {
                                required: true,
                                //number: true
                            },
                            Order: {
                                required: true,
                                number: true
                            },
                        },
                        messages: {
                            Link: {
                                required: "Phải nhập link liên kết",
                                //number: "Phải nhập kiểu số",
                            },
                            Order: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số",
                            }
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
    
<script type="text/javascript">
    $(document).ready(function () {
        ///Load default
        $("#LinkModule").hide();
        $("#Detail").hide();
        $("#Content").hide();

        $("#PageTypeDDL").change(function () {
            var pageType = $("#PageTypeDDL").val();
            //alert(pageType);
            if (pageType == 0) {
                //alert("Khoa CKEditor");
                $("#trMenuDetails").hide();
                $("#trMenuContent").hide();
                $("#trMenuLink").show();
            }
            else {
                //alert("Mo CKEditor");
                $("#trMenuDetails").show();
                $("#trMenuContent").show();
                $("#trMenuLink").hide();                
                var editor;
                function createEditor(languageCode, id) {
                    var editor = CKEDITOR.replace(id, {
                        language: languageCode
                    });
                }

                $(function () {
                    createEditor('vi', 'Detail');
                    createEditor('vi', 'Content');
                });
            }
        });

        

        $("#LinkDDL").change(function () {
            var i = $(this).val();
            $(".error").hide();
            if (i == 0) {
                $("#Link").show();
                $("#LinkModule").hide();
            }
            else if (i == 1) {
                $("#LinkModule").show();
                $("#Link").hide();
            }
            else {
                //alert("LinkModule show");
                $("#LinkModule").hide();
                $("#Link").hide();
            }
        });
    });
</script>

