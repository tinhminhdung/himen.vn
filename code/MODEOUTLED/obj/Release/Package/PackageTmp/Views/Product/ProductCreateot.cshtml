    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#productcreate-form").validate({
                        rules: {
                            Cat: "required",
                            Name: "required",
                            Image: "required",
                            PriceRetail: "required",
                            PricePromotion: "required",
                            //Weight: "required",
                            Num: "required",
                            Ord: {
                                required: true,
                                number: true
                            }
                        },
                        messages: {
                            Cat: "Phải chọn nhóm sản phẩm",
                            Name: "Phải nhập tên sản phẩm",
                            Image: "Phải nhập ảnh sản phẩm",
                            PriceRetail: "Phải nhập giá cũ",
                            PricePromotion: "Phải nhập giá bán",
                            //Weight: "Phải nhập trọng lượng",
                            Num: "Phải nhập số lượng sản phẩm",
                            Ord: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số"
                            }
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

