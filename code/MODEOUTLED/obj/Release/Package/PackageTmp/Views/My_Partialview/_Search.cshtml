<!--Sử dụng cho autocomplete-->
<script type="text/javascript">
    $(document).ready(function () {
        $('*[data-autocomplete-url]')
    .each(function () {
        $(this).autocomplete({
            source: $(this).data("autocomplete-url")
        });
    });
    });
</script>

