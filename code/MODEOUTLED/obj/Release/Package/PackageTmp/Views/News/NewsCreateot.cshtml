@{
    ViewBag.Title = "Thêm mới tin";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}
@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#Newscreate-form").validate({
                        rules: {
                            GroupNews: "required",
                            Name: "required"
                        },
                        messages: {
                            GroupNews: "Vui lòng chọn nhóm tin cần thêm!",
                            Name: "Nhập tiêu đề tin cần thêm!"
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../News/NewsIndexot'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='../../News/NewsIndexot'>Danh mục tin</a></li>
                <li class='Last'><span>Thêm mới tin</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("NewsCreate", "News", FormMethod.Post, new { enctype = "multipart/form-data", @id = "Newscreate-form", @class = "validate-form" }))
        {
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm mới tin</h4>

                        <!-- Button -->
                        <div class="ui-corner-top ui-corner-bottom">
                            <div id="toolbox">
                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td align="center">

                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>

                                            </td>
                                            <td align="center">

                                                <a title="Quay lại" class="toolbar btn btn-info" href="../../News/NewsIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Thêm mới tin</h4>
                            <div class="FloatMenuBar">

                                <div class="ui-corner-top ui-corner-bottom">
                                    <div id="Div1">

                                        <div style="float: right;" class="toolbox-content">

                                            <table class="toolbar">
                                                <tr>
                                                    <td align="center">
                                                        <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                                    </td>
                                                    <td align="center">
                                                        <a title="Quay lại" class="toolbar btn btn-info" href="../../News/NewsIndexot"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->

                    <!-- widget-body -->
                    <div class="widget-body">
                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">

                                    <tr>
                                        <td class="key">Nhóm tin <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.DropDownList("GroupNews", " === Nhóm tin ===")
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Tên nhóm tin
                                                </p>
                                                <p class="tooltipmessage">
                                                    Tên nhóm tin (Ví dụ: Thời trang nữ)
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">Tên tin <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBox("Name", "", new { @class = "text" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Tên tin
                                                </p>
                                                <p class="tooltipmessage">
                                                    Tên của tin (Ví dụ: Áo khoác da Italy)
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Ảnh tin <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBox("Image", "", new { @class = "text" })&nbsp;<input id="SelectImages" type="button" value="Chọn ảnh" />
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Ảnh tin
                                                </p>
                                                <p class="tooltipmessage">
                                                    Ảnh mô tả của tin 
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">Miêu tả tóm tắt
                                        </td>
                                        <td>
                                            @Html.TextArea("Content")
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Miêu tả tóm tắt
                                                </p>
                                                <p class="tooltipmessage">
                                                    Miêu tả tóm tắt về tin 
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">Nội dung chi tiết 
                                        </td>
                                        <td>
                                            @Html.TextArea("Detail")
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Nội dung chi tiết
                                                </p>
                                                <p class="tooltipmessage">
                                                    Nội dung chi tiết của tin 
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Tiêu đề 
                                        </td>
                                        <td>
                                            @Html.TextBox("Title", "", new { style = "width:350px" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Tiêu đề
                                                </p>
                                                <p class="tooltipmessage">
                                                    Tiêu đề của tin
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>


                                    <tr>
                                        <td class="key">Mô tả chi tiết 
                                        </td>
                                        <td>
                                            @Html.TextBox("Description", "", new { style = "width:350px" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Mô tả chi tiết
                                                </p>
                                                <p class="tooltipmessage">
                                                    Mô tả chi tiết của tin
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">Từ khóa 
                                        </td>
                                        <td>
                                            @Html.TextBox("Keyword", "", new { style = "width:350px" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Từ khóa
                                                </p>
                                                <p class="tooltipmessage">
                                                    Từ khóa của tin
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Trang chủ
                                        </td>
                                        <td>
                                            @Html.CheckBox("Index", true)
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Xuất hiện trang chủ
                                                </p>
                                                <p class="tooltipmessage">
                                                    Xuất hiện trang chủ
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Kích hoạt 
                                        </td>
                                        <td>
                                            @Html.CheckBox("Active", true)
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Kích hoạt
                                                </p>
                                                <p class="tooltipmessage">
                                                    Kích hoạt
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    
                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body -->

                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });
    $(function () {
        createEditor('vi', 'Detail');
    });
</script>