<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('.sQuant a.btnAdd').click(function () {
            jQuery(this).parent().find('.txtQuantity').val(parseInt(jQuery(".sQuant .txtQuantity").val()) + 1);
        });

        jQuery('.sQuant .btnDivi').click(function () {
            if (jQuery(this).parent().find('.txtQuantity').val() < 2) {
                jQuery(this).parent().find('.txtQuantity').val(1);
            }
            else {
                jQuery(this).parent().find('.txtQuantity').val(parseInt(jQuery(this).parent().find('.txtQuantity').val()) - 1);
            }
        });

        jQuery('.sQuant .txtQuantity').focusout(function () {
            if (jQuery(this).parent().find('.txtQuantity').val() < 0) {
                jQuery(this).parent().find('.txtQuantity').val(1);
            }
        });

    });

</script>
