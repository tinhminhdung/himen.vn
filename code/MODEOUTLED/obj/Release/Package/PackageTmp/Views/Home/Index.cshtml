                        }
                     @*<p class="detailpro"><a href="/thong-tin/@Model[i].Tag" rel="nofollow">Chi tiết</a></p>*@
                    </div>
                 <p class="sp_name"><a href="/thong-tin/@Model[i].Tag">@Model[i].Name</a></p>
