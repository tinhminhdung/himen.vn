                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">Tên hỗ trợ viên<span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Name, "", new { @class = "text" })
