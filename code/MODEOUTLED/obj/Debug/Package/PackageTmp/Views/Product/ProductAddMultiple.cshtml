@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Validate Data -->
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script type="text/javascript">

    (function ($, W, D) {

        var JQUERY4U = {};

        JQUERY4U.UTIL =
        {
            setupFormValidation: function () {
                //validation rules
                $("#productaddmultiple-form").validate({
                    rules: {
                        fileExcel: "required",
                        ImageUrl: "required"
                    },
                    messages: {
                        fileExcel: "Phải chọn file excel",
                        ImageUrl: "Phải chọn ảnh"
                    },
                    submitHandler: function (form) {
                        form.submit();
                    }
                });
            }
        }

        //when the dom has loaded setup form validation rules
        $(D).ready(function ($) {
            JQUERY4U.UTIL.setupFormValidation();
        });

    })(jQuery, window, document);
</script>
<!-- End Validate Data -->

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("ProductAddMultiple", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @id = "productaddmultiple-form", @class = "validate-form" }))
{
    <table class="TableUpdate" border="1">
        <tr>
            <td class="Control" colspan="2">
                <ul>
                    <li>
                        <input type="submit" value="Ghi lại " class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở về", "ProductIndex", "", new { @class = "uback" })</li>
                </ul>
            </td>
        </tr>

        <tr>
            <th>Chọn file excel</th>
            <td>
                <input type="file" id="fileExcel" name="fileExcel" /></td>
        </tr>

        <tr>
            <th>Chọn thư mục ảnh</th>
            <td>
                <input type="file" id="ImageUrl" name="ImageUrl" multiple="multiple" /></td>
        </tr>

        <tr>
            <td class="Control" colspan="2">
                <ul>
                    <li>
                        <input type="submit" value="Ghi lại " class="uupdate" /></li>
                    <li>@Html.ActionLink("Trở về", "ProductIndex", "", new { @class = "uback" })</li>
                </ul>
            </td>
        </tr>
    </table>
}






