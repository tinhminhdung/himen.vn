@model onsoft.Models.Size
@{
    ViewBag.Title = "ProvinceEdit";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#Size-form").validate({
                        rules: {

                            Name: "required",
                            Ord: {
                                required: true,
                                number: true
                            },
                        },
                        messages: {

                            Name: "Phải nhập tên kích thước",
                            Ord: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số",
                            },
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">
        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../Admins/Default'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='../../Size/SizeIndex'>Danh sách kích thước</a></li>
                <li class='Last'><span>Chỉnh sửa thông tin kích thước</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>
        @using (Html.BeginForm("SizeEdit", "Size", new { id = @Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "Size-form", @class = "validate-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Chỉnh sửa thông tin kích thước</h4>

                        <!-- Button -->
                        <div class="ui-corner-top ui-corner-bottom">
                            <div id="toolbox">
                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td align="center">
                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                            </td>
                                            <td align="center">
                                                <a title="Quay lại" class="toolbar btn btn-info" href="../../Size/SizeIndex">
                                                    <i class="icon-chevron-left"></i>&nbsp;
                                                    Trở về
                                                </a>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Chỉnh sửa thông tin kích thước
                            </h4>
                            <div class="FloatMenuBar">

                                <div class="ui-corner-top ui-corner-bottom">
                                    <div id="Div1">

                                        <div style="float: right;" class="toolbox-content">

                                            <table class="toolbar">
                                                <tr>
                                                    <td align="center">
                                                        <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                                    </td>
                                                    <td align="center">
                                                        <a title="Quay lại" class="toolbar btn btn-info" href="../../Size/SizeIndex">
                                                            <i class="icon-chevron-left"></i>&nbsp;
                                                            Trở về
                                                        </a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- widget-title-end -->
                    <!-- widget-body -->
                    <div class="widget-body">
                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">

                                    <tr>
                                        <td class="key">Tên kích thước <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Name, "", new { @class = "text" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Tên kích thước
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Tên kích thước (Ví dụ: XL)
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="key">Thứ tự <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Ord, new { @onkeypress = "OnlyInputNumber(0)", @style = "width: 80px; text-align: left" })
                                            <span class="tooltip-help">
                                                <span class="tooltipContent">
                                                    <p class="tooltiptitle">
                                                        Thứ tự
                                                    </p>
                                                    <p class="tooltipmessage">
                                                        Thứ tự hiển thị
                                                    </p>
                                                </span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Kích thước mặc định
                                        </td>
                                        <td>
                                            @Html.CheckBoxFor(m => m.Default.Value)
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Kích thước mặc định khi thêm nhiều sản phẩm.
                                                </p>
                                                <p class="tooltipmessage">
                                                    Kích thước mặc định khi thêm nhiều sản phẩm bằng file Excel.
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body-end -->
                </div>
            </div>
        }
    </div>
</div>
