@model IList<onsoft.Models.Country>
@{
    ViewBag.Title = "Quản lý quốc gia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var username = User.Identity.IsAuthenticated ? User.Identity.Name : string.Empty;
}

<h2>@ViewBag.Title</h2>
@using (@Html.BeginForm("MultiDelete","Country",FormMethod.Post))
{
    <div class="Control">
        <ul>
            <li>@Html.ActionLink("Thêm mới","CountryCreate","", new {@class="vadd"})</li>
                <li><input type="submit" value=" Xóa " class="mulDel" /></li>
            <li>@Html.ActionLink("Làm mới", "CountryIndex", "", new { @class = "vrefresh" })</li>
            <li><a class="vback" href="javascript:void(0);" onclick="window.history.go(-1);">Trở lại</a></li>
        </ul>
    </div>
    <table class="TableView" border="1" id="myTable">
       
          <tr class="trHeader">
                <th class="CheckBoxsmall"><input type="checkbox" onclick="Javascript: chkSelectAll_OnClick(this)" id="chkSelectAll" /></th>
                <th class="Text">Tên quốc gia</th>
                <th class="Image">Logo </th>
              <th class="Number">Thứ tự </th>
                <th class="Function">Chức năng</th>
            </tr>
            @for (int i = 0; i < Model.Count; i++)
			{
                if (i%2 == 0 )
                {
                     <tr id="trOdd_@i" class="trOdd" onmousemove="Javascript:chkSelect_OnMouseMove(this)" onmouseout="Javascript:chkSelect_OnMouseOut(this,0)">
                         <td class="CheckBoxsmall">@Html.CheckBox("chk" + Model[i].Id, new { id = "chkSelect", onclick = "Javascript:chkSelect_OnClick(this,0)", @class="chk" })</td>
                         <td class="Text">@Html.DisplayFor(modelItem => Model[i].Name)</td>
                         <td class="Image">
                             @if(Model[i].Logo != "" && Model[i].Logo != null){
                             <img src="@Model[i].Logo" style="width:60px; height:40px; margin-top:5px;"  />
                             }
                             else{<img src="/Images/no-image.png" style="width:60px; height:40px; margin-top:5px;"  />}
                         </td>  
                         <td class="Number">@Html.DisplayFor(modelItem => Model[i].Ord)</td>                       
                         <td class="Function">
                             @Html.ActionLink("Sửa", "CountryEdit", new { id = Model[i].Id }, new { @class = "vedit" }) 
                                 @Html.ActionLink("Xóa", "CountryDelete", new { id = Model[i].Id }, new { @onclick = "return DeleteConfirm()", @class = "vdelete" }) 
                        @if (Model[i].Active == true)
                                 {@Html.ActionLink("Active", "CountryActive", new { id = Model[i].Id }, new { @class = "vactive" })}
                                 else
                                 {@Html.ActionLink("Active", "CountryActive", new { id = Model[i].Id }, new { @class = "vnotactive" })}
                          </td>
                     </tr>
                }
                else
                {
                      <tr id="trEven_@i" class="trEven" onmousemove="Javascript:chkSelect_OnMouseMove(this)" onmouseout="Javascript:chkSelect_OnMouseOut(this,@i)">
                         <td class="CheckBoxsmall">@Html.CheckBox("chk" + Model[i].Id, new { id = "chkSelect", onclick = "Javascript:chkSelect_OnClick(this,0)", @class="chk" })</td>  
                         <td class="Text">@Html.DisplayFor(modelItem => Model[i].Name)</td>
                         <td class="Image">
                             @if(Model[i].Logo != "" && Model[i].Logo != null){
                             <img src="@Model[i].Logo" style="width:60px; height:40px; margin-top:5px;"  />
                             }
                             else{<img src="/Images/no-image.png" style="width:60px; height:40px; margin-top:5px;"  />}
                         </td>  
                         <td class="Number">@Html.DisplayFor(modelItem => Model[i].Ord)</td>                       
                         <td class="Function">
                             @Html.ActionLink("Sửa", "CountryEdit", new { id = Model[i].Id }, new { @class = "vedit" }) 
                                 @Html.ActionLink("Xóa", "CountryDelete", new { id = Model[i].Id }, new { @onclick = "return DeleteConfirm()", @class = "vdelete" }) 
                                 @if (Model[i].Active == true)
                                 {@Html.ActionLink("Active", "CountryActive", new { id = Model[i].Id }, new { @class = "vactive" })}
                                 else
                                 {@Html.ActionLink("Active", "CountryActive", new { id = Model[i].Id }, new { @class = "vnotactive" })}
                          </td>
                      </tr>
                }

            }
    </table>
    @Html.Raw(ViewBag.Pager)
      <div class="Control">
        <ul>
            <li>@Html.ActionLink("Thêm mới", "CountryCreate", "", new { @class = "vadd" })</li>
                <li><input type="submit" value=" Xóa " class="mulDel" /></li>
            <li>@Html.ActionLink("Làm mới", "CountryIndex", "", new { @class = "vrefresh" })</li>
            <li><a class="vback" href="javascript:void(0);" onclick="window.history.go(-1);">Trở lại</a></li>
        </ul>
    </div>
}
<script>
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Description');
    });
</script>