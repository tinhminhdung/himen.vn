@model onsoft.Models.GroupSupport
@{
    ViewBag.Title = "Thêm mới nhóm hỗ trợ";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#groupSupport-form").validate({
                        rules: {                            
                            Name: "required",                            
                            Ord: {
                                required: true,
                                number: true
                            }
                        },
                        messages: {                            
                            Name: "Phải nhập tên nhóm hỗ trợ",                            
                            Ord: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số"
                            }
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../GroupSupport/GroupSupportIndex'><i class="icon-home" style="font-size: 14px;"></i>Trang chủ</a></li>
                <li class='SecondLast'><a href='../../GroupSupport/GroupSupportIndex'>Danh mục nhóm hỗ trợ</a></li>
                <li class='Last'><span>Sửa nhóm hỗ trợ</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("GroupSupportEdit", "GroupSupport", FormMethod.Post, new { enctype = "multipart/form-data", @id = "groupSupport-form", @class = "validate-form" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Sửa nhóm hỗ trợ</h4>

                        <!-- Button -->
                        <div class="ui-widget-content ui-corner-top ui-corner-bottom">
                            <div id="toolbox">
                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td class="text-center">
                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                            </td>
                                            <td class="text-center">
                                                <a title="Quay lại" class="toolbar btn btn-info" href="../../GroupSupport/GroupSupportIndex"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4>
                                <i class="icon-reorder"></i>&nbsp;Thêm mới nhóm hỗ trợ</h4>
                            <div class="FloatMenuBar">

                                <div class="ui-widget-content ui-corner-top ui-corner-bottom">
                                    <div id="Div1">

                                        <div style="float: right;" class="toolbox-content">

                                            <table class="toolbar">
                                                <tr>
                                                    <td class="text-center">
                                                        <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                                    </td>
                                                    <td class="text-center">
                                                        <a title="Quay lại" class="toolbar btn btn-info" href="../../GroupSupport/GroupSupportIndex"><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                                    </td>
                                                </tr>
                                            </table>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->

                    <!-- widget-body -->
                    <div class="widget-body">
                        <div id="tabs">
                            <div id="tabs-1">

                                <table class="admintable" style="width: 100%;">
                                    <tr>
                                        <td class="key">Tên nhóm hỗ trợ <span class="Required">*</span></td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Name, "", new { @class = "text" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Tên nhóm hỗ trợ
                                                </p>
                                                <p class="tooltipmessage">
                                                    Tên của nhóm hỗ trợ (Ví dụ: Kĩ thuật, bán hàng)
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    
                                    <tr>
                                        <td class="key">Thứ tự <span class="Required">*</span>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.Ord, "", new { @class = "text" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Thứ tự
                                                </p>
                                                <p class="tooltipmessage">
                                                    Thứ tự của nhóm hỗ trợ
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>

                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body -->

                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("#SelectImages").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $("#Image").val(fileUrl);
            };
            finder.popup();
        });
    });
</script>

<script type="text/javascript">
    var editor;
    function createEditor(languageCode, id) {
        var editor = CKEDITOR.replace(id, {
            language: languageCode
        });
    }

    $(function () {
        createEditor('vi', 'Content');
    });
    $(function () {
        createEditor('vi', 'Detail');
    });
</script>
<script type="text/javascript">
    $(function () {
        $("#SDate").datepicker();
        $("#EDate").datepicker();
    });
</script>
<script type="text/javascript">
    jQuery(document).ready(function ($) {

        $("select#Cat").change(function (evt) {
            debugger;
            if ($("select#Cat").val() != "") {

                $.ajax({
                    url: "/Product/GetCatL2",
                    type: 'POST',
                    data: { id: $("select#Cat").val() },
                    success: function (response) {
                        $("select#CatL2").replaceWith(response)
                    },
                    error: function (xhr) {
                        $("select#CatL2").replaceWith("<select id='CatL2'  name='CatL2' disabled='disabled'></select>");
                    }
                });
            }
            else {
                $("select#CatL2").replaceWith("<select id='CatL2'  name='CatL2' disabled='disabled'></select>");
            }
        });
    });
</script>
