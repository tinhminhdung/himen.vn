@{
    ViewBag.Title = "UserModuleCreate";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}
@section Scripts
{
    <!-- Validate Data -->
    <script type="text/javascript">

        (function ($, W, D) {

            var JQUERY4U = {};

            JQUERY4U.UTIL =
            {
                setupFormValidation: function () {
                    //validation rules
                    $("#module-form").validate({
                        rules: {
                            Name: "required",
                            Order: {
                                required: true,
                                number: true
                            },
                        },
                        messages: {
                            Name: "Phải nhập tên Module",
                            Order: {
                                required: "Phải nhập thứ tự",
                                number: "Phải nhập kiểu số",
                            },
                        },
                        submitHandler: function (form) {
                            form.submit();
                        }
                    });
                }
            }

            //when the dom has loaded setup form validation rules
            $(D).ready(function ($) {
                JQUERY4U.UTIL.setupFormValidation();
            });

        })(jQuery, window, document);
    </script>
    <!-- End Validate Data -->
}

<div class="container-fluid">
    <div style="width: 100%; margin: 0 auto;">

        <div id="Breadcrumb" class="Block Breadcrumb ui-widget-content ui-corner-top ui-corner-bottom">
            <ul>
                <li><a href='../../GroupSupport/GroupSupportIndexot'><i class="icon-home" style="font-size: 14px;"></i>Trang quản trị</a></li>
                <li class='SecondLast'><a href='../../UserModule/UserModuleIndex'>Danh sách module</a></li>
                <li class='Last'><span>Thêm mới nhóm hỗ trợ</span></li>
            </ul>
        </div>

        <div style="clear: both;"></div>

        @using (Html.BeginForm("UserModuleCreate", "UserModule", FormMethod.Post, new { enctype = "multipart/form-data", @id = "module-form", @class = "validate-form" }))
        {
            <div id="cph_Main_ContentPane">
                <div class="widget">
                    <!-- widget-title -->
                    <div class="widget-title">
                        <h4><i class="icon-reorder"></i>&nbsp;Thêm Module</h4>

                        <!-- Button -->
                        <div class="ui-corner-top ui-corner-bottom">
                            <div id="toolbox">

                                <div style="float: right;" class="toolbox-content">

                                    <table class="toolbar">
                                        <tr>
                                            <td align="center">
                                                <button type="submit" class="toolbar btn btn-info"><i class="icon-save"></i>&nbsp;Ghi lại</button>
                                            </td>
                                            <td align="center">
                                                <a title="Quay lại" class="toolbar btn btn-info" href="javascript:history.go(-1)" ><i class="icon-chevron-left"></i>&nbsp;Trở về</a>
                                                @*<a class="back" href="javascript:history.go(-1)" title="Back"></a>*@
                                            </td>
                                        </tr>
                                    </table>

                                </div>
                            </div>
                        </div>

                        <!-- End Button -->

                        <div id="hiddenToolBarScroll" class="scrollBox hidden">
                            <h4><i class="icon-reorder"></i>&nbsp;Thêm mới Module</h4>
                            <div class="FloatMenuBar">
                                @Html.Partial("_PartialMenuRight")
                            </div>
                        </div>

                    </div>
                    <!-- widget-title -->

                    <!-- widget-body -->
                    <div class="widget-body">
                        <div id="tabs">
                            <div id="tabs-1">
                                @if (TempData["notice-false"] != null)
                                {
                                    <div class="alert alert-error">
                                        @TempData["notice-false"]
                                    </div>
                                }
                                <table class="admintable" style="width: 100%;">
                                    <tr>
                                        <td class="key">Tên Module <span class="Required">*</span></td>
                                        <td>
                                            @Html.TextBox("Name", "", new { @class = "text" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Tên Module
                                                </p>
                                                <p class="tooltipmessage">
                                                    Tên của Module (Ví dụ: Thêm hỗ trợ viên)
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Mô tả <span class="Required"></span></td>
                                        <td>
                                            @Html.TextBox("Description", "", new { @class = "text" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Mô tả Module
                                                </p>
                                                <p class="tooltipmessage">
                                                    Mô tả Module (Ví dụ: Thêm hỗ trợ viên: thực hiện thêm một hỗ trợ viên)
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Thứ tự <span class="Required">*</span></td>
                                        <td>
                                            @Html.TextBox("Order", "", new { @onkeypress = "OnlyInputNumber(0)" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Thứ tự Module
                                                </p>
                                                <p class="tooltipmessage">
                                                    Thứ tự Module
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="key">Trạng thái <span class="Required"></span></td>
                                        <td>
                                            @*<input type="checkbox" name="Active" id="active" />*@
                                            @Html.CheckBox("Active", new { id = "Active", onclick = "Javascript:chkSelect_OnClick(this,0)", @class = "chk" })
                                            <span class="tooltip-help"><span class="tooltipContent">
                                                <p class="tooltiptitle">
                                                    Trạng thái hiển thị của module
                                                </p>
                                                <p class="tooltipmessage">
                                                    Module đang được kích hoạt hay không.
                                                </p>
                                            </span></span>
                                        </td>
                                    </tr>
                                </table>

                            </div>
                        </div>

                    </div>
                    <!-- widget-body -->

                </div>
            </div>
        }
    </div>
</div>

